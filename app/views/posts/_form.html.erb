<h1>New Post</h1>
<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>
  <%= f.label :categories %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %><br>
  <%= f.label "New Category" %>
  <%= f.fields_for :categories, @post.categories.build do |category_fields|  %>
    <%= category_fields.text_field :name %>
  <% end %><br><br>
  <%= f.label :content %>
  <%= f.text_area :content %><br><br>

  <%= f.submit %>
<% end %>